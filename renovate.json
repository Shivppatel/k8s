{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "enabledManagers": [
    "helmv3"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "packageRules": [
    {
      "description": "Group and automerge non-major Helm chart dependency updates",
      "matchManagers": [
        "helmv3"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major Helm chart dependencies",
      "groupSlug": "all-non-major-helm-chart-dependencies",
      "automerge": true
    },
    {
      "description": "Never automerge major Helm chart dependency updates",
      "matchManagers": [
        "helmv3"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ]
}
